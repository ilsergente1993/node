#!/bin/bash

# Run Go vet command for project packages
#
# Usage:
#> bin/check_govet [packages ...]
#
# Examples:
#> bin/check_govet
#> bin/check_govet .
#> bin/check_govet ./...
#> bin/check_govet ./communication
#> bin/check_govet ./communication/...

source bin/helpers/output.sh

ARGUMENTS=$@
if [ -z "$ARGUMENTS" ]; then
    ARGUMENTS=`go list ./...`
fi

go vet -composites=false ${ARGUMENTS}
if [ $? -ne 0 ] ; then
    print_error "Files are not compliant to go vet."
    exit 1
fi

print_success "All files are compliant to go vet."
exit 0
